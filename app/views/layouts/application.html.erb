<!DOCTYPE html>
<html>
	<head>
	  <title>Good Vibes</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>

		<nav class="navbar">
			<div class="signIn-bar">
				<% if signed_in? %>
					<%= link_to 'Sign out', session_path, method: :delete %>
				<% else %>
					<%= link_to 'Sign in', new_session_path %>
					<%= link_to 'Register', new_user_path %>
				<% end %>
			</div>
		
			<% if logged_in? %><h2> Welcome <%= current_user.username.capitalize %>!</h2><% end %>
			<ul>
				<li><h3><a href="/">Good Vibes</h3></li>
				<li><h3><a href="users">Find Your Friends</h3></li>
				<br>
				<li><h3><a href="users/<%= current_user.id %>">Profile</a></h3></li>
				<li><h3><a href="#Search">Search</a></h3></li>
			</ul>
		</nav>
		<div>
			<% if alert %>
				<p>	<%= alert %> </p>
			<% end %>
			<% if notice %>
				<p>	<%= notice %> </p>
			<% end %>
		</div>
	<%= yield %>

	</body>
</html>
